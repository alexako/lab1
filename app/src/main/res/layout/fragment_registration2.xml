<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Registration2">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/formLabel2"
            android:layout_width="192dp"
            android:layout_height="32dp"
            android:layout_marginTop="64dp"
            android:text="@string/reg_label"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/degreeProgram"
            android:layout_width="252dp"
            android:layout_height="51dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="72dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/formLabel2" />

        <EditText
            android:id="@+id/yearLevel"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:ems="10"
            android:hint="@string/prompt_year"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/degreeProgram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/degreeProgram"
            app:layout_constraintTop_toTopOf="@+id/degreeProgram" />

        <EditText
            android:id="@+id/birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:ems="10"
            android:hint="@string/prompt_birthday"
            android:inputType="date"
            android:onClick="showDatePickerDialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/degreeProgram" />

        <TextView
            android:id="@+id/hobbiesLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/prompt_hobbies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/birthday" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="137dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hobbiesLabel">

            <CheckBox
                android:id="@+id/aircraft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb_aircraft" />

            <CheckBox
                android:id="@+id/amRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb_amradio" />

            <CheckBox
                android:id="@+id/bell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb_bell" />

            <CheckBox
                android:id="@+id/blacksmithing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb_bs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="175dp"
            android:layout_height="134dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout">

            <CheckBox
                android:id="@+id/bridge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb_bridge" />

            <CheckBox
                android:id="@+id/candle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb_candle" />

            <CheckBox
                android:id="@+id/crochet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb_crocheting" />

            <CheckBox
                android:id="@+id/dumpster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb_dumpster" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>